generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  MANAGER
  STAFF
}

enum PaymentMode {
  CASH
  DUE
}

enum TransactionType {
  INCOME
  EXPENSE
  CAPITAL
  LOAN
}

enum AccountType {
  CASH
  BANK
  CAPITAL
  LOAN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(STAFF)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sales     Sale[]
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id                String         @id @default(cuid())
  name              String
  sku               String         @unique
  categoryId        String
  category          Category       @relation(fields: [categoryId], references: [id])
  unit              String
  costPrice         Float
  salePrice         Float
  stock             Int            @default(0)
  lowStockThreshold Int            @default(10)
  saleItems         SaleItem[]
  purchaseItems     PurchaseItem[]
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
}

model Customer {
  id           String        @id @default(cuid())
  name         String
  email        String?
  phone        String?
  address      String?
  balance      Float         @default(0)
  sales        Sale[]
  transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Vendor {
  id           String        @id @default(cuid())
  name         String
  email        String?
  phone        String?
  address      String?
  balance      Float         @default(0)
  purchases    Purchase[]
  transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Sale {
  id            String      @id @default(cuid())
  invoiceNumber String      @unique
  customerId    String?
  customer      Customer?   @relation(fields: [customerId], references: [id])
  items         SaleItem[]
  subtotal      Float
  discount      Float       @default(0)
  total         Float
  paymentMode   PaymentMode @default(CASH)
  paidAmount    Float
  dueAmount     Float
  createdById   String
  createdBy     User        @relation(fields: [createdById], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model SaleItem {
  id        String  @id @default(cuid())
  saleId    String
  sale      Sale    @relation(fields: [saleId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  unitPrice Float
  total     Float
}

model Purchase {
  id        String         @id @default(cuid())
  vendorId  String
  vendor    Vendor         @relation(fields: [vendorId], references: [id])
  items     PurchaseItem[]
  subtotal  Float
  total     Float
  paidAmount Float
  dueAmount  Float
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model PurchaseItem {
  id         String   @id @default(cuid())
  purchaseId String
  purchase   Purchase @relation(fields: [purchaseId], references: [id])
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  quantity   Int
  unitPrice  Float
  total      Float
}

model Account {
  id           String        @id @default(cuid())
  name         String
  type         AccountType
  balance      Float         @default(0)
  transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Transaction {
  id          String          @id @default(cuid())
  accountId   String
  account     Account         @relation(fields: [accountId], references: [id])
  type        TransactionType
  amount      Float
  description String?
  reference   String?
  customerId  String?
  customer    Customer?       @relation(fields: [customerId], references: [id])
  vendorId    String?
  vendor      Vendor?         @relation(fields: [vendorId], references: [id])
  createdAt   DateTime        @default(now())
}
